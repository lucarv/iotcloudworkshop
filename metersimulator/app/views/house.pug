extends layout

block content
        .panel.panel-default
            .panel-heading Control Appliances
            .panel-body  
                form(action='/house', method='post', id='formb')
                    fieldset
                        table.table
                            thead
                            tr
                                th Appliance
                                th Consumption (watts/min)
                                th On?  
                                th Toggle                                                                       
                            tbody
                            each appl in appls
                                tr
                                td= appl.name
                                td= appl.kwm
                                td= appl.state
                                td 
                                    .checkbox                        
                                        input(type='checkbox', name=appl.name) 
                button.btn.btn-space.btn-primary(type='submit', form='formb') apply                                    


        
                        