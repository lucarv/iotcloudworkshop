extends layout

block content
    .panel.panel-default
        .panel-heading Device Telemetry (to change parameters go to the twin tab)
        .panel-body          
            form(action='/telemetry', method='post', id='formb')
                fieldset
                    .form-group.row
                        .col-sm-4
                            input.form-control(type='text', placeholder='interval: ' + interval readonly) 
                        .col-sm-4
                            input.form-control(type='text', placeholder='telemetry type: ' + msgType readonly)  
                    .form-group.row                           
                        .col-xs-1
                            button.btn.btn-space.btn-default(type='submit', form='formb', name='action', value='on') 
                                span.glyphicon.glyphicon-play                                                                       
                        .col-xs-1
                            button.btn.betn-space.btn-default(type='submit', form='formb', name='action', value='off')
                                span.glyphicon.glyphicon-pause                                                                                                